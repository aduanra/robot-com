<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.robot.RobotFragment">

    <TextView
            android:id="@+id/text_infos_robot_title"
            android:text="@string/title_infos_robot"

            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textAlignment="center"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

    />

    <TextView
            android:id="@+id/text_infos_robot_log_title"
            android:text="@string/label_log"

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_infos_robot_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"/>

    <TextView
            android:id="@+id/text_infos_robot_log_content"
            android:text="..."

            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_infos_robot_log_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"/>

</RelativeLayout>